import random

choices = ["rock", "paper", "scissors"]

user_score = 0
computer_score = 0
rounds_played = 0

print("ğŸ® Welcome to Rock-Paper-Scissors Game!")
print("ğŸ‘‰ Type 'rock', 'paper', or 'scissors' to play.")
print("ğŸ”š Type 'exit' to quit the game at any time.\n")

while True:
    user_choice = input("Your choice (rock/paper/scissors): ")
    
    if user_choice == 'exit':
        print("\nThanks for playing!")
        break

    if user_choice not in choices:
        print("âŒ Invalid choice. Please choose rock, paper, or scissors.\n")
        continue

    computer_choice = random.choice(choices)
    print(f"ğŸ§ You chose: {user_choice}")
    print(f"ğŸ’» Computer chose: {computer_choice}")

    # Determine winner
    if user_choice == computer_choice:
        result = "ğŸ¤ It's a tie!"
    elif (
        (user_choice == "rock" and computer_choice == "scissors") or
        (user_choice == "paper" and computer_choice == "rock") or
        (user_choice == "scissors" and computer_choice == "paper")
    ):
        result = "âœ… You win!"
        user_score += 1
    else:
        result = "âŒ You lose!"
        computer_score += 1

    rounds_played += 1
    print(result)
    print(f" Score - You: {user_score} | Computer: {computer_score} | Rounds: {rounds_played}\n")

  
    play_again = input("Do you want to play another round? (yes/no): ").lower()
    if play_again != 'yes':
        print("\nğŸ‰ Final Score:")
        print(f"You: {user_score}, Computer: {computer_score}, Rounds Played: {rounds_played}")
        print("Goodbye! ")
        break
